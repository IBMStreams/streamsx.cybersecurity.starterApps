	<target name="init">
		<exec executable="mkdir">
			<arg value="-p" />
			<arg value="${maxmind.dir}" />
		</exec>	
		<exec executable="tar">
			<arg value="-C" />
			<arg value="${opt.dir}" />
			<arg value="-xzvf" />
			<arg value="${maxmind.file}" />
	
		</exec>	
	</target>

	<target name="clean">
		<!-- clean toolkit index -->
		<exec executable="${streams.install}/bin/spl-make-toolkit">
			<arg value="-c" />
			<arg value="-i" />
			<arg value="." />
		</exec>		
	
        	<delete dir="output" />

		<!-- remove maxmind files -->
		<delete>
			<!--fileset dir="${data.dir}">
				<include name="GeoLite2-City-CSV.zip"/>
			</fileset-->
			<fileset dir="${opt.dir}">
				<include name="maxmind/geo/*.csv"/>
				<include name="maxmind/asn/*.csv"/>
			</fileset>
			<dirset dir="${opt.dir}/maxmind" />
		</delete>
	</target>

	<target name="standalone">
		<echo message="Launch application in standalone mode ..." />
		<exec executable="./output/PredictiveBlacklistingBasic_Output/bin/standalone">
		</exec>
	</target>

	<target name="buildAndSubmitRemote">
		<echo message="Build PredictiveBlacklistingBasic application..." />
		<exec executable="streamsx-sc">
			<arg value="--disable-ssl-verify" />
			<arg value="--main-composite" />
			<arg value="com.ibm.streamsx.cybersecurity.sample::PredictiveBlacklistingBasic" />
			<arg value="--spl-path" />
			<arg value="${spss.toolkit.path}" />

		</exec>
		<echo message="Submit PredictiveBlacklistingBasic application..." />
		<exec executable="streamsx-streamtool">
			<arg value="--disable-ssl-verify" />
			<arg value="submitjob" />
			<arg value="output/com.ibm.streamsx.cybersecurity.sample.PredictiveBlacklistingBasic.sab" />
		</exec>
	</target>


</project>
